
.container{
  background-color: #fff;
  height:100vh;
  
  display: flex; 
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.about-banner{
  width: 375rpx;
  height: 375rpx;
  border-radius: 50%;
}

.center{
  display: flex; 
  flex-direction: column;
}
.arrow-sign {
  position: absolute;
  right: 20px;
  top: 50%;
  margin-top: -4px;
  width: 6px;
  height: 6px;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  transform: rotate(-45deg);
  transition-duration:400ms;
}
.arrow-sign2{
  position: absolute;
  right: 20px;
  top: 50%;
  margin-top: -4px;
  width: 6px;
  height: 6px;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  transform: rotate(45deg);
  transition-duration:400ms;
}